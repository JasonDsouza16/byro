<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Update Dish</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body class="container" style="margin-top: 50px;">

	<% if (messages.error) { %>
	<div class="alert alert-danger" role="alert"><%- messages.error %></div>
	<% } %>

    <div class="card"> 
    	<div class="card-header">
			Update Dish
		</div>
        <div class="card-body">
            <form action="/home/<%= branch_id %>/<%= menu_name %>/update_menu" method="post">
                <div class="form-group">
                    <label>Branch ID:</label>
                    <input type="text" class="form-control" name="branch_id" value="<%= branch_id %>" autocomplete="off" readonly>
                </div>
                <div class="form-group">
                    <label>Name:</label>
                    <input type="text" class="form-control" name="menu_name" value="<%= menu_name %>" autocomplete="off" readonly>
                </div>
                <div class="form-group">
                    <label>Category:</label>
                    <select name="menu_category" class="form-control">
                      <optgroup label="Select Category">
                      <option <%= menu_category=="Veg" ? "selected" : "" %> value="Veg">Veg</option>
                      <option <%= menu_category=="Non-Veg" ? "selected" : "" %> value="Non-Veg">Non-Veg</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Type:</label>
                    <input type="text" class="form-control" name="menu_type" value="<%= menu_type %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Price:</label>
                    <input type="text" class="form-control" name="menu_price" value="<%= menu_price %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Link:</label>
                    <input type="text" class="form-control" name="menu_image_link" value="<%= menu_image_link %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Description:</label>
                    <input type="text" class="form-control" name="menu_description" value="<%= menu_description %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Update Dish"/>
                </div>
            </form>
        </div>
    </div>
</body>
</html>